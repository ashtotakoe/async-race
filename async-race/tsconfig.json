{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "./*",
        "./src/*"
      ]
    }
  }
}
